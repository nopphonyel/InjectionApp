<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.ac.kku.nu.injectionroom.activity.MainPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/icon_name_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/syringe_main"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"/>

        <android.support.v7.widget.CardView
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/ten_R"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="4dp">
            <TextView
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TitleTextView.Large"
                android:text="@string/tenR"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="4dp">
            <TextView
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TitleTextView.Large"
                android:text="@string/information"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:visibility="invisible"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/play_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="4dp">
            <TextView
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TitleTextView.Large"
                android:text="@string/play_game"/>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_below="@id/play_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/sw"
                android:layout_marginLeft="20dp"
                android:textOn="ไทย"
                style="@style/SelectionSwitch"
                android:textSize="20sp"
                android:textOff="Eng"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:thumb="@color/cardview_light_background"
                android:track="@color/cardview_light_background"
                android:showText="true"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/nurse_main"
                android:layout_width="200dp"
                android:layout_height="fill_parent"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
    </style>
    
    <style name="Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TitleTextView.Large">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="BigButton">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="BigButton.ActionPositive" parent="BigButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/pureWhite</item>
    </style>

    <style name="BigButton.ActionSecondaryPositive" parent="BigButton">
        <item name="android:backgroundTint">@color/pureWhite</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="each_control_size">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="InformationTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InformationContents">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="backBtn">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

</resources>

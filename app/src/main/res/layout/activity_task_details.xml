<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.ac.kku.nu.injectionroom.activity.game.TaskDetails">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/task_type_title"
            style="@style/TitleTextView.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Type Title" />

        <TextView
            android:id="@+id/task_desc"
            android:layout_below="@id/task_type_title"
            android:paddingTop="10dp"
            android:paddingLeft="4dp"
            style="@style/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Type Title" />

    </RelativeLayout>

    <Button
        android:textColor="@color/pureWhite"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/start_task"
        android:text="@string/start_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
